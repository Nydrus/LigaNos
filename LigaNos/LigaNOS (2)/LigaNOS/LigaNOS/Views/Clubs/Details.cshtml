@model LigaNOS.Data.Entities.Club
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <hr />
    <dl class="row">
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Coach)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Coach)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Stadium)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stadium)
        </dd>

     </dl>
    <div class="col-md-4">
      @* <img src="@Url.Content(Model.image)" alt="Image" style="width:300px;height:450px;max-width:100%;height:auto" /> *@
    </div>

    <h3>Players</h3>
    @if (Model.Players != null && Model.Players.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Players.First().Name)</th>
                    <th>@Html.DisplayNameFor(m => m.Players.First().Position)</th>  
                </tr>
            </thead>
            <tbody>
                @foreach (var player in Model.Players)
                {
                    <tr>
                        <td>@player.Name</td>
                        <td>@player.Position</td>
                        
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No players available for this club.</p>
    }

</div>
 <div>
    <a asp-action="Index" class="btn btn-success">Back to List</a>
 </div>
