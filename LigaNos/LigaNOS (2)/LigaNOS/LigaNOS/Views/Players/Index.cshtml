@model IEnumerable<LigaNOS.Data.Entities.Player>

<h3>Players</h3>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Player</a>
</p>

 
    <table class="table">
        <thead>
            <tr>
            <th>@Html.DisplayNameFor(model => model.ImageFileId)</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Position)</th>
                <th>@Html.DisplayNameFor(model => model.DateOfBirth)</th>
                <th>@Html.DisplayNameFor(model => model.Club.Name) </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)

            {
                <tr>
                <td>
                    <img src="@item.ImageFullPath" alt="@item.Name " Photo" style="width: 100px; height: auto;" />
                </td>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Position)</td>
                <td>@(item.DateOfBirth.HasValue ? item.DateOfBirth.Value.ToString("dd/MM/yyyy") : "N/A")</td>


                <td>
                    @if (item.Club != null)
                    {
                        @item.Club.Name
                    }
                    else
                    {
                        <span>No Club</span>
                    }
                </td>
                   
                    <td>
                 
              </td>
       

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" id="btnDelete">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
 